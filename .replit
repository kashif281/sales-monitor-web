# Replit configuration file
# This helps Replit understand how to deploy your application

# Language and runtime
language = "dockerfile"

# Run command (production mode for deployment)
# Note: For local development, you can manually run "cd web && npm run dev" in the shell
run = "cd web && npm run build && npm start"

# Entrypoint for deployment
entrypoint = "npm start"

# Working directory for deployment
[deploy]
workingDir = "/app/web"
publicDir = "/app/web/.next"

# Environment variables
[env]
PORT = "3000"
NODE_ENV = "production"

# Build configuration
[build]
command = "cd web && npm install && npm run build"